@{
    ViewData["Title"] = "Ajuste de Precios";
}
<div class="row">
    <div class="col">
        <h3 class="title">@ViewBag.Title</h3>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <label for="lines">L&iacute;neas</label>
        <select id="lines" class="w-100" multiple="multiple"></select>
    </div>
    <div class="col">
        <ul id="round-options"></ul>
    </div>
    <div class="col text-right">
        <label class="w-100">&nbsp;</label>
        <button type="button" class="btn btn-primary mr-2" id="action-save-prices">Guardar Precios</button>
    </div>
</div>
<div class="row">
    <div class="col">
        <label class="w-100 bg-warning p-3">Vista previa de los cambios (s&oacute;lo 10 productos por categor&Iacute;a se muestran)</label>
        <div id="items-list" style="width: 100%; height: 700px"></div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        let urlLines = "@Url.Action("GetAvailableLines")",
            urlSubsidiaries = "@Url.Action("GetSubsidiariesItems")",
            urlProducts = "@Url.Action("GetProducts")",
            urlSave = "@Url.Action("SavePrices")",
            permission = "@ViewData["Permission"]";
    </script>
    <environment include="Development">
        <script src="~/js/areas/product/updown-prices.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/areas/product/updown-prices.min.js" asp-append-version="true"></script>
    </environment>
}
