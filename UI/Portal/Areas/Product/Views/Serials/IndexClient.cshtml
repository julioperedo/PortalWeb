@{
    ViewData["Title"] = "Verificación de Seriales";
}
<input type="hidden" id="card-code" value="@ViewData["CardCode"]" />
<div class="row">
    <div class="col">
        <h3 class="title">@ViewBag.Title</h3>
    </div>
</div>
<div class="row">
    <div class="col-2 col-md-2 col-lg-1 text-right">
        <label for="serial">Serial</label>
    </div>
    <div class="col">
        <input type="text" id="serial" class="form-control" required />
    </div>
    <div class="col-3 col-md-2 col-lg-1">
        <button id="filter" type="button" class="btn btn-primary">Buscar</button>
    </div>
</div>
<div class="row">
    <div class="col pt-3">
        <div id="Listado"></div>
        <div class="d-none no-items">No se encontr&oacute; el serial en ninguna de las Notas de Venta propias.</div>
    </div>
</div>
<div id="Report">
    <div id="reportViewer1" class="k-widget" style="width: 100%; height: 650px;">
    </div>
</div>
@section Styles {
    <environment include="Development">
        <link href="~/css/areas/product/serial-client.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/areas/product/serial-client.min.css" rel="stylesheet" />
    </environment>
}
<script type="text/kendo-x-tmpl" id="temp-item">
    <div class="doc-detail">
        <span class="title">Sucursal:</span> <span class="d-data">#:subsidiary#</span>
        <span class="title">#:docTypeDesc#:</span> <a class="#if(docType === 15) {#delivery#} else {#sale#}#-note action action-link">#:number#</a>
        <span class="title">Fecha:</span> <span class="d-data">#: kendo.toString(date, "dd-MM-yyyy") #</span>
    </div>
</script>
@section Scripts {
    <script type="text/javascript">
        var urlFilter = "@Url.Action("Filter", "Serials")",
            urlService = "@Url.Content("~/api/reports/")";
    </script>
    <script src="~/lib/ReportViewer/js/telerikReportViewer-16.2.22.914.min.js"></script>
    <script src="~/lib/ReportViewer/js/resources.es-BO.js"></script>
    <environment include="Development">
        <script src="~/js/areas/product/serials-client.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/areas/product/serials-client.min.js" asp-append-version="true"></script>
    </environment>
}