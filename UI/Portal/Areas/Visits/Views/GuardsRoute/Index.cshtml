@{
	ViewBag.Title = "Control de Guardias";
}
<div class="row">
	<div class="col-12 col-sm-7">
		<h3 class="title">@ViewBag.Title</h3>
	</div>
	<div class="col-12 col-sm-5 text-right">
		<a class="btn btn-secondary" title="Mostrar Panel de B&uacute;squeda" data-toggle="collapse" href="#filter-box" role="button" aria-expanded="false" aria-controls="filter-box"><i class="fas fa-search"></i></a>
	</div>
</div>
<div class="row">
	<div class="col">
		<div id="filter-box" class="bg-light px-2 py-3 collapse show">
			<div class="row">
				<label for="Guard" class="text-right text-nowrap col-3 col-sm-2 col-xl-1">Guardias:</label>
				<div class="col-9 col-sm-4 col-md-5 col-xl-3">
					<input id="Guard" class="w-100" />
				</div>
				<label for="Since" class="text-right text-nowrap col-3 col-sm-2 col-xl-1">Fecha Inicial:</label>
				<div class="col-9 col-sm-4 col-md-3 col-lg-2">
					<input type="datetime" id="Since" style="width: 180px;" />
				</div>
				<label for="Until" class="text-right text-nowrap col-3 col-sm-2 col-xl-1">Fecha Final:</label>
				<div class="col-9 col-sm-4 col-md-3 col-lg-2">
					<input type="datetime" id="Until" style="width: 180px;" />
				</div>
				<div class="text-right col">
					<button type="button" class="btn btn-primary" id="action-filter">Buscar</button>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-12 col-xl-9">
		<div id="map" style="width: 100%; height: 500px;"></div>
	</div>
	<div class="col-12 col-xl-3">
		<div id="resumePoints"></div>
	</div>
</div>
<link href="~/css/areas/visits/guardsroute/index.css" rel="stylesheet" />
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css"
	  integrity="sha256-kLaT2GOSpHechhsozzB+flnD+zUyjE2LlfWPgU04xyI="
	  crossorigin="" />
<!-- Make sure you put this AFTER Leaflet's CSS -->
<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"
		integrity="sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM="
		crossorigin=""></script>
@section Scripts {
	<script type="text/javascript">
	var urlGetPoints = "@Url.Action("GetPoints", "GuardsRoute")",
		urlGetGuards = "@Url.Action("GetGuards", "GuardsRoute")",
		urlRouteIcon = "@Url.Content("~/images/maps/route.png")",
		urlTraceIcon = "@Url.Content("~/images/maps/trace.png")",
		urlPinIcon = "@Url.Content("~/images/maps/pin.png")";
	</script>
	<environment include="Development">
		<script src="~/js/areas/visits/guardsroute.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/js/areas/visits/guardsroute.min.js" asp-append-version="true"></script>
	</environment>
}