@model Portal.Areas.Visits.Models.Visit

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

	<div class="form-horizontal form-reading">
		@Html.HiddenFor(model => model.Id)

		<div class="form-group">
			@Html.LabelFor(model => model.Initialdate, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
			<div class="col-sm-4 col-md-4 ">
				<span>@Model.Initialdate</span>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.CardCode, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
			@{ string myClass = Model.CardCode == "CVAR-001" ? "col-md-4" : "col-md-10"; }
			<div class="col-sm-4 @myClass">
				<span>@Model.ClientName</span>
			</div>
			@if (Model.CardCode == "CVAR-001") {
				@Html.LabelFor(model => model.ClientDescription, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
				<div class="col-sm-4 col-md-4 @myClass">
					<span>@Model.ClientDescription</span>
				</div>
			}
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.VisitorId, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
			<div class="col-sm-4 col-md-4 ">
				<span>@Model.VisitorName</span>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.StaffId, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
			<div class="col-sm-4 col-md-4">
				<span>@Model.StaffName</span>
			</div>

			@Html.LabelFor(model => model.ReasonVisit, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
			<div class="col-sm-4 col-md-4">
				<span>@Model.ReasonVisit</span>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.SecurityCardId, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
			<div class="col-sm-4 col-md-4">
				<span>@Model.SecurityCardId</span>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Commentaries, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
			<div class="col-sm-10 col-md-10">
				<span>@Model.Commentaries</span>
			</div>
		</div>
	</div>
}