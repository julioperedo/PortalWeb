        var urlEmployee = "@Url.Action("GetEmployeeData")",
            urlResumeYears = "@Url.Action("GetResumeYears")",
            urlResumeDaysTaken = "@Url.Action("GetResumeDaysTaken")",
            urlGetRequests = "@Url.Action("GetRequests")",
            urlEmployees = "@Url.Action("GetAvailableEmployees")",
            urlHolidays = "@Url.Action("GetHolidays")",
            urlChangeState = "@Url.Action("ChangeState")",
