    </environment>
    <environment exclude="Development">
        <script src="~/js/areas/human-resources/employee-home.min.js" asp-append-version="true"></script>
        <script src="~/lib/form-data-json/form-data-json.min.js"></script>
    </environment>
    <script src="~/lib/lodash.js/lodash.min.js"></script>
}