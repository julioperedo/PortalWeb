    <environment include="Development">
        <link href="~/css/areas/human-resources/employee-home.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/areas/human-resources/employee-home.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}
