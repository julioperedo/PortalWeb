@{
	ViewData["Title"] = "Eventos";
}
<div class="row">
	<div class="col">
		<h3 class="title">@ViewBag.Title</h3>
	</div>
</div>
<div class="row box-container"></div>
<div class="form-content">
	<a href="#" class="next">Cargar los siguientes 10 eventos</a>
</div>
<div id="Detail"></div>
<input type="hidden" id="next-event" value="1" />
@section Scripts {
	<script type="text/javascript">
		var urlNext = "@Url.Action("Next", "Events")",
			urlDetail = "@Url.Action("Detail", "Events")";
	</script>
	<environment include="Development">
		<script src="~/js/areas/marketing/events/index.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/js/areas/marketing/events/index.min.js" asp-append-version="true"></script>
	</environment>
}