@model BEntities.Security.User
<form asp-action="Edit" asp-controller="Users" asp-area="Administration" method="post">
    <div class="form-horizontal">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="AccountHolder" />
        <input type="hidden" id="BlackList" value="@ViewData["BlackList"]" />
        <input type="hidden" asp-for="ValidForEnabling" />
        <div class="row mb-1">
            <label for="FirstName" class="col-md-2">Nombres</label>
            <div class="col-md-10">
                <input asp-for="FirstName" class="form-control" />
            </div>
        </div>
        <div class="row mb-1">
            <label for="LastName" class="col-md-2">Apellidos</label>
            <div class="col-md-10">
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>
        <div class="row mb-1">
            <label for="EMail" class="col-md-2">Usuario (E-Mail)</label>
            <div class="col-md-4">
                <input asp-for="EMail" type="email" class="form-control" />
            </div>
            <label for="Password" class="col-md-1">Contraseña</label>
            <div class="col-md-5">
                @if (ViewData["SeePasswords"].ToString() == "Y")
                {
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" value="@Model.Password" />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="see-password" style="border: 1px solid #ced4da;"><i class="fas fa-eye"></i></button>
                        </div>
                    </div>
                }
                else
                {
                    <input asp-for="Password" type="password" class="form-control" value="@Model.Password" />
                }
            </div>
        </div>
        <div class="row mb-1">
            <label for="Address" class="col-md-2">Direcci&oacute;n</label>
            <div class="col-md-10">
                <textarea asp-for="Address" rows="3" class="form-control"></textarea>
            </div>
        </div>
        <div class="row mb-1">
            <label for="Phone" class="col-md-2">Tel&eacute;fono</label>
            <div class="col-md-10">
                <input asp-for="Phone" class="form-control" />
            </div>
        </div>
        <div class="row mb-1">
            <label for="CardCode" class="col-md-2">Cliente</label>
            <div class="col-md-6">
                <input asp-for="CardCode" style="width: 100%;" />
            </div>
        </div>
        <div class="row mb-1">
            <label for="IdProfile" class="col-md-2">Perfil</label>
            <div class="col-md-4">
                <input asp-for="IdProfile" style="width: 100%;" />
            </div>
            <label for="Position" class="col-md-1">Cargo</label>
            <div class="col-md-5">
                <input asp-for="Position" class="form-control" />
            </div>
        </div>
        <div class="row mb-1">
            <label for="Commentaries" class="col-md-2">Comentarios</label>
            <div class="col-md-10">
                <textarea asp-for="Commentaries" rows="3" class="form-control"></textarea>
            </div>
        </div>
        <div class="row mb-1">
            <div class="col">
                <label for="Enabled" class="action">Habilitado</label>
                <input type="hidden" name="Enabled" value="false" />
                <label class="switch">
                    @{
                        string enabledChecked = Model.Enabled ? @"checked=""checked""" : "";
                    }
                    <input type="checkbox" id="Enabled" name="Enabled" @enabledChecked value="@Model.Enabled" />
                    <span class="slider round"></span>
                </label>
            </div>
            <div class="col">
                <label for="AllowLinesBlocked" class="action">Ver L&iacute;neas Bloqueadas</label>
                <input type="hidden" name="AllowLinesBlocked" value="false" />
                <label class="switch">
                    @{
                        string allowedLinesdChecked = Model.AllowLinesBlocked ? @"checked=""checked""" : "";
                    }
                    <input type="checkbox" id="AllowLinesBlocked" name="AllowLinesBlocked" @allowedLinesdChecked value="@Model.AllowLinesBlocked" />
                    <span class="slider round"></span>
                </label>
            </div>
            <div class="col">
                <input type="hidden" name="RequiredLogOff" value="false" />
                <label for="RequiredLogOff" class="action">Forzar relogueo</label>
                <label class="switch">
                    @{
                        string requiredLogOff = Model.RequiredLogOff ? @"checked=""checked""" : "";
                    }
                    <input type="checkbox" id="RequiredLogOff" name="RequiredLogOff" @requiredLogOff value="@Model.RequiredLogOff" />
                    <span class="slider round"></span>
                </label>
            </div>
        </div>
        <div class="text-right">
            <button type="button" id="action-cancel" class="btn btn-outline-secondary">Cancelar</button>
            <button type="button" id="action-save" class="btn btn-primary">Guardar</button>
        </div>
    </div>
</form>