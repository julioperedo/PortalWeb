@model string
<form asp-area="Administration" asp-controller="PersonalData" asp-action="UpdatePassword" class="">
	<input type="hidden" value="@Model" id="CurrentPassword" />
	<div class="form-group row">
		<div class="col">
			<label for="OldPassword">Contrase&ntilde;a actual</label>
			<input id="OldPassword" name="OldPassword" type="password" class="form-control" required />
		</div>
	</div>
	<div class="form-group row">
		<div class="col">
			<label for="NewPassword">Nueva contrase&ntilde;a</label>
			<input id="NewPassword" name="NewPassword" type="password" class="form-control" required />
		</div>
	</div>
	<div class="form-group row">
		<div class="col">
			<label for="ConfirmPassword">Confirmar contrase&ntilde;a</label>
			<input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" required />
		</div>
	</div>
	<div class="m-form__actions m-form__actions--solid">
		<div class="row">
			<div class="col">
				<input id="changePassword" type="button" value="Cambiar Contrase&ntilde;a" class="btn btn-focus btn-primary" />
			</div>
		</div>
	</div>
</form>