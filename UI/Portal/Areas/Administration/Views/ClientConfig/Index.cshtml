@{
    ViewBag.Title = "Configuraraciones";
    string cardCode = ViewBag.CardCode;
}
<div class="row" id="titles">
    <div class="col-12 col-sm-7">
        <h3 class="title">@ViewBag.Title</h3>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="custom-tab">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active show" data-toggle="tab" href="#tab1" role="tab" aria-selected="true">Receptores de correos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tab2" role="tab">Usuarios WebService</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active show" id="tab1" role="tabpanel">
                    <div id="Listado"></div>
                </div>
                <div class="tab-pane" id="tab2" role="tabpanel">
                    <div id="tab2Content" class="p-2">
                        <div id="ListadoUsuarios" class="d-none"></div>
                        <span id="not-allowed">Su empresa no está habilitada para esta funci&oacute;n.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="Detail">
    <form>
        <input type="hidden" id="Id" name="Id" />
        <div class="row">
            <div class="col">
                <label for="Name">Nombre</label>
                <input type="text" id="Name" name="Name" class="form-control" required />
            </div>
            <div class="col">
                <label for="EMail">Correo Electr&oacute;nico</label>
                <input type="email" id="EMail" name="EMail" class="form-control" required />
            </div>
            <div class="col">
                <label for="Type">Tipo</label>
                <input id="Type" name="Type" class="w-100" required />
            </div>
        </div>
        <div class="row">
            <div class="col text-right pt-2">
                <button type="button" id="action-cancel" class="btn btn-outline-secondary">Cancelar</button>
                <button type="button" id="action-save" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>
<div id="DetailUser">
    <form autocomplete="autocomplete_off_hack_xfr4!k">
        <input type="hidden" id="user-data" />
        <div class="row">
            <div class="col">
                <label for="user-name">Nombre de Usuario</label>
                <div class="input-group">
                    <input type="text" id="user-name" name="user-name" class="form-control" required />
                    <div class="input-group-append">
                        <div class="input-group-text" id="client-code">@@@cardCode</div>
                    </div>
                </div>
                <span class="k-invalid-msg" data-for="user-name"></span>
            </div>
            <div class="col">
                <label for="password">Contrase&ntilde;a</label>
                <div class="input-group">
                    <input id="password" name="password" type="password" class="form-control" required />
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="see-password" style="border: 1px solid #ced4da;"><i class="fas fa-eye"></i></button>
                    </div>
                </div>
                <span class="k-invalid-msg" data-for="password"></span>
            </div>
            <div class="col">
                <label for="enabled" class="col-md-2">Habilitado</label>
                <div class="col-md-3">
                    <input type="hidden" name="enabled" value="false" />
                    <label class="switch">
                        <input type="checkbox" id="enabled" name="enabled" />
                        <span class="slider round"></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col text-right pt-2">
                <button type="button" id="action-cancel-user" class="btn btn-outline-secondary">Cancelar</button>
                <button type="button" id="action-save-user" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script type="text/javascript">
		var urlGetItems = "@Url.Action("GetItems", "ClientConfig")",
            urlGetTypes = "@Url.Action("GetTypes", "ClientConfig")",
            urlGetUsers = "@Url.Action("GetUsers", "ClientConfig")",
            urlEdit = "@Url.Action("Edit", "ClientConfig")",
            urlEditUser = "@Url.Action("EditUser", "ClientConfig")",
            urlDelete = "@Url.Action("Delete", "ClientConfig")",
            urlDeleteUser = "@Url.Action("DeleteUser", "ClientConfig")",
            urlService = "@Url.Content("~/api/reports/")",
            cardCode = "@cardCode";
    </script>
    <environment include="Development">
        <script src="~/js/areas/administration/clientconfig.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/areas/administration/clientconfig.min.js" asp-append-version="true"></script>
    </environment>
}