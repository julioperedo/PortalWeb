    <environment include="Development">
        <link href="~/css/areas/home.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/areas/home.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}
